<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1755216713552-1" author="Guilherme Oliveira">
        <createTable tableName="app_users">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_app_users"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password_hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email_verified" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1755216713552-2" author="Guilherme Oliveira">
        <createTable tableName="organization_member_roles">
            <column name="organization_member_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_organization_member_roles"/>
            </column>
            <column name="role_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_organization_member_roles"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1755216713552-3" author="Guilherme Oliveira">
        <createTable tableName="organization_members">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_organization_members"/>
            </column>
            <column name="organization_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="invited_by" type="UUID"/>
            <column name="invited_at" type="TIMESTAMP"/>
            <column name="accepted_at" type="TIMESTAMP"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1755216713552-4" author="Guilherme Oliveira">
        <createTable tableName="organizations">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_organizations"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1755216713552-5" author="Guilherme Oliveira">
        <createTable tableName="permissions">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_permissions"/>
            </column>
            <column name="name" type="VARCHAR(150)">
                <constraints nullable="false"/>
            </column>
            <column name="resource" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="action" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1755216713552-6" author="Guilherme Oliveira">
        <createTable tableName="role_permissions">
            <column name="permission_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role_permissions"/>
            </column>
            <column name="role_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role_permissions"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1755216713552-7" author="Guilherme Oliveira">
        <createTable tableName="roles">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_roles"/>
            </column>
            <column name="name" type="VARCHAR(60)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="is_active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="organization_id" type="UUID"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <!-- Unique Constraints -->
    <changeSet id="1755216713552-8" author="Guilherme Oliveira">
        <addUniqueConstraint columnNames="email" constraintName="uc_app_users_email" tableName="app_users"/>
    </changeSet>

    <changeSet id="1755216713552-9" author="Guilherme Oliveira">
        <addUniqueConstraint columnNames="organization_id, user_id" constraintName="uc_organization_members_user" tableName="organization_members"/>
    </changeSet>

    <changeSet id="1755216713552-10" author="Guilherme Oliveira">
        <addUniqueConstraint columnNames="name, organization_id" constraintName="uc_roles_name_organization" tableName="roles"/>
    </changeSet>

    <!-- Indexes -->
    <changeSet id="1755216713552-13" author="Guilherme Oliveira">
        <createIndex indexName="ix_organizations_name" tableName="organizations">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <changeSet id="1755216713552-14" author="Guilherme Oliveira">
        <createIndex indexName="ix_permissions_resource_action" tableName="permissions">
            <column name="resource"/>
            <column name="action"/>
        </createIndex>
    </changeSet>

    <!-- Foreign Keys -->
    <changeSet id="1755216713552-16" author="Guilherme Oliveira">
        <addForeignKeyConstraint baseColumnNames="invited_by" baseTableName="organization_members"
                                 constraintName="fk_organization_members_invited_by" referencedColumnNames="id"
                                 referencedTableName="app_users"/>
    </changeSet>

    <changeSet id="1755216713552-17" author="Guilherme Oliveira">
        <addForeignKeyConstraint baseColumnNames="organization_id" baseTableName="organization_members"
                                 constraintName="fk_organization_members_organization" referencedColumnNames="id"
                                 referencedTableName="organizations"/>
        <createIndex indexName="ix_organization_members_organization" tableName="organization_members">
            <column name="organization_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="1755216713552-18" author="Guilherme Oliveira">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="organization_members"
                                 constraintName="fk_organization_members_user" referencedColumnNames="id"
                                 referencedTableName="app_users"/>
        <createIndex indexName="ix_organization_members_user" tableName="organization_members">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="1755216713552-19" author="Guilherme Oliveira">
        <addForeignKeyConstraint baseColumnNames="organization_id" baseTableName="roles"
                                 constraintName="fk_roles_organization" referencedColumnNames="id"
                                 referencedTableName="organizations"/>
        <createIndex indexName="ix_roles_organization" tableName="roles">
            <column name="organization_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="1755216713552-20" author="Guilherme Oliveira">
        <addForeignKeyConstraint baseColumnNames="organization_member_id" baseTableName="organization_member_roles"
                                 constraintName="fk_org_member_roles_member" referencedColumnNames="id"
                                 referencedTableName="organization_members"/>
    </changeSet>

    <changeSet id="1755216713552-21" author="Guilherme Oliveira">
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="organization_member_roles"
                                 constraintName="fk_org_member_roles_role" referencedColumnNames="id"
                                 referencedTableName="roles"/>
    </changeSet>

    <changeSet id="1755216713552-22" author="Guilherme Oliveira">
        <addForeignKeyConstraint baseColumnNames="permission_id" baseTableName="role_permissions"
                                 constraintName="fk_role_permissions_permission" referencedColumnNames="id"
                                 referencedTableName="permissions"/>
    </changeSet>

    <changeSet id="1755216713552-23" author="Guilherme Oliveira">
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="role_permissions"
                                 constraintName="fk_role_permissions_role" referencedColumnNames="id"
                                 referencedTableName="roles"/>
    </changeSet>
</databaseChangeLog>