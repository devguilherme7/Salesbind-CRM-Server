<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress checks for generated sources, like MapStruct mappers -->
    <suppress checks="." files="[\\/]build[\\/]generated[\\/]"/>

    <!-- Suppress checks for the main application class -->
    <suppress checks="HideUtilityClassConstructor" files="Application\.java$"/>
    <suppress checks="FinalClass" files="Application\.java$"/>

    <!-- Suppress Javadoc checks for test classes -->
    <suppress checks="Javadoc" files="[\\/]src[\\/]test[\\/]java[\\/]"/>

    <!-- Suppress MagicNumber check for test classes as they often use numbers for test data -->
    <suppress checks="MagicNumber" files="[\\/]src[\\/]test[\\/]java[\\/]"/>
</suppressions>
